@model List<EnergyData>

@{
    ViewBag.Title = "Energy Data";
}

<h2>Energy Data</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Month</th>
            <th>Year</th>
            <th>Hydropower</th>
            <th>Nuclear Power</th>
            <th>Thermal Power</th>
            <th>Total Production</th>
            <th>Pumping Storage</th>
            <th>Net Production</th>
            <th>Import</th>
            <th>Export</th>
            <th>Domestic Consumption</th>
            <th>Losses</th>
            <th>Final Consumption</th>
            <th>Export / Import Balance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.Month</td>
                <td>@record.Year</td>
                <td>@record.Hydropower.ToString()</td>
                <td>@record.NuclearPower.ToString()</td>
                <td>@record.ThermalPower.ToString()</td>
                <td>@record.TotalProduction.ToString()</td>
                <td>@record.PumpingStorage.ToString()</td>
                <td>@record.NetProduction.ToString()</td>
                <td>@record.Import.ToString()</td>
                <td>@record.Export.ToString()</td>
                <td>@record.DomesticConsumption.ToString()</td>
                <td>@record.Losses.ToString()</td>
                <td>@record.FinalConsumption.ToString()</td>
                <td>@record.ExportImportBalance.ToString()</td>
            </tr>
        }
    </tbody>
</table>
